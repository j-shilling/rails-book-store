<h1><%= pluralize(@stores.length, 'Store') %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Phone</th>
  </tr>

<% @stores.each do |store| %>
  <tr>
    <td><%= store.name %></td>
    <td><%= store.phone_number %></td>
    <td><%= link_to "Show", store_path(store) %></td>
    <td><%= link_to "Edit", edit_store_path(store) %></td>
    <td><%= link_to "Delete", store_path(store), :method => :delete %></td>
  </tr>
<% end %>

</table>

<br>

<%= link_to "New Store", new_store_path %>
