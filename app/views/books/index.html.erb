<h1><%= pluralize(@books.length, 'Books') %></h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Price</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= link_to book.author.full_name, author_path(book.author) %></td>
    <td>$<%= '%.2f' % book.price %> </td>
    <td><%= link_to "Edit", edit_book_path(book) %></td>
    <td><%= link_to "Delete", book_path(book), :method => :delete %></td>
  </tr>
<% end %>

</table>

<%= link_to "New Book", new_book_path %>
